{
  "compilerOptions": {
    "target": "ES6",                         // Versão do JavaScript emitida
    "module": "CommonJS",                    // Módulo usado pelo Node.js
    "rootDir": "./src",                      // Diretório de origem dos arquivos
    "outDir": "./dist",                      // Diretório de saída dos arquivos compilados
    "strict": true,                          // Ativa verificações mais rigorosas
    "esModuleInterop": true,                 // Permite a interoperabilidade com ES6
    "skipLibCheck": true                     // Ignora verificação de tipos de bibliotecas
  },
  "include": ["src/**/*"],                   // Inclui todos os arquivos TypeScript na pasta src
  "exclude": ["node_modules", "dist"]        // Exclui node_modules e dist
}
